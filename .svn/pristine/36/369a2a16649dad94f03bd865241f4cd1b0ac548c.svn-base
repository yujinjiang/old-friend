<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>title</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <style>
    	body{
    		
    	}
    	  	#header{
    	  height: 50px;
    	  background: blue;
    	  color: white;
    	  font-size:22px;
    	  line-height: 50px;
    	  text-align: center; 
    	}
     div input,textarea{
    	   height: 40px;
    	   font-size: 20px;
    	   line-height: 40px;
    	   text-indent: 30px;
    	   border: solid 1px;
    	   margin-top: 23px;
    	   margin-left: 20px;
    	   margin-right: 20px;
    	   opacity: 0.2;
    	   width: 300px;
    	}
     .con{
           text-align: center;
           overflow: scroll;
     }
     #maintext{
       height:300px;
       vertical-align: top;
       overflow: scroll;
     }
     #on{
       text-align: center;
       border-radius: 3px; 
     }
    </style>
</head>
<body>
	<div id="wapper" >
	    <div id="header"  v-on:click="back">返回</div>
	    <div class="con" ><textarea  id="maintext" type="text" placeholder="maintext" v-model="maintext" ></textarea></div>
	    <div class="con" ><input id="on" type="button" value="submit"  v-on:click="submit" /></div>
	</div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/vue.js" ></script>
<script type="text/javascript">
	apiready = function(){
	var passdata= api.pageParam;
	var  user={};
	user.count = ''; 
	try{
	    user = $api.getStorage("users");
	}catch(error){
	   
	};
	alert(user.count);
	alert(passdata.count);
	
	if(user.count==""){
	   alert("没有登陆"); 
	  api.closeWin({
        name:"leavemessage"
      });
	}
	
	
	
		var wapper = new Vue({
		   el:"#wapper",
		   data:{
		      maintext:"",
		      form:user.count,
		      to:passdata.count
		   },
		   methods:{
		     back:function(){
		       api.closeWin({
                 name:"leavemessage"
               });
		     },
		     submit:function(){
		     
		     if(wapper.maintext=="")
		     {
		        alert("非空");
		        return;
		     }
		     
		       //提交数据直接带数据 库里面   这样  可以直接 被访问到 
		       api.ajax({
			    url: 'http://www.abccome.xyz/vue/leavemesjob.php',
			    method: 'post',
			    dataType:'text',
			    data: {
			        values: {
			            form:wapper.form,
			            to:wapper.to,
			            maintext:wapper.maintext
			        }
			    }
			}, function(ret, err) {
			    if (ret) {
			        api.alert({ msg: JSON.stringify(ret) });
			        activity.closeKeyFrame({
					    id: 1
					});
					wapper.maintext="";
			    } else {
			        api.alert({ msg: JSON.stringify(err) });
			    }
			});
			
			
			
			
			//  提交数据到书记库
		      //这里只是用来增加一个用户的体验
		      var activity = api.require('UILoading');
				activity.keyFrame({
				    rect: {
				        w: 80,
				        h: 100
				    },
				    styles: {
				        bg: 'rgba(0,0,0,0.5)',
				        corner: 5,
				        interval: 50,
				        frame: {
				            w: 80,
				            h: 80
				        }
				    }
				}, function(ret) {
				    alert(JSON.stringify(ret));
				});
				//提交的时候 上下跳动 
		      
		       
		       
		     }
		   }
		   
		   
		});
	};
</script>
</html>