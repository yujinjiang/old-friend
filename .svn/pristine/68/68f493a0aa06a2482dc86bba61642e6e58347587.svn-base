<script type="text/javascript">
	apiready = function(){
		var sideMenu = api.require('sideMenu');
		
		
		
		var wapper = new Vue({
		   el:"#wapper",
		   data:{
		  
		   },
		   methods:{
		     show:function(){
	
		     sideMenu.show({
				    id: 1
				});
		     },
		    
		   }
		   
		   
		});
		  sideMenu.open({
		    trajectoryColor: '#3F9FEA',
		    btnArray: [{
		        title: '发布',
		        'icon': 'widget://image/write.png',
		        'bgImg': 'widget://res/sideMenu/bg.png'
		    }, {
		        title: '查看',
		        'icon': 'widget://image/search.png',
		        'bgImg': 'widget://res/sideMenu/bg.png'
		    }, {
		        title: '返回',
		        'icon': 'widget://image/back.png',
		        'bgImg': 'widget://res/sideMenu/bg.png'
		    }, {
		        title: '隐退',
		        'icon': 'widget://image/yintui.png',
		        'bgImg': 'widget://res/sideMenu/bg.png'
		    }],
		    clickHide:false,
		}, function(ret, err) {
		    if (ret) {
		     //  alert(JSON.stringify(ret));
		        
		        if(ret.index==undefined||ret.index=='3')
		        {
		           sideMenu.hidden({
	                   id:1
                   });
		        };
		        if(ret.index=='0')
		        {
		          api.openWin({
	                  name: 'frienf',
	                  url: '../framehtml/frienf.html'
                  });
		        };
		        
		        if(ret.index=="1")
		        {
		          api.openWin({
	                  name: 'frienddetail',
	                  url: '../framehtml/frienddetail.html'
                  });
		          
		        }
		        
		        
		    } else {
		        alert(JSON.stringify(err));
		    }
		});	
		
		
		
		
		
				
		
				
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	
		
		
		
		
		
	};
