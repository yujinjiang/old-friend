            line-height: 40px;
     	}
     	img{
     	margin:0px auto;
     	  width:100px;
     	  height:100px;
     	  border: 1px solid;
     	  
     	}
     	.imgControl{
     	 text-align:center;
     	 margin-top: 20px;
     	   
     	}
    </style>
</head>
<body>
   <div id="wapper" >
   <div id="wappers" >个人中心</div>
   <div class="imgControl"  v-show="src" ><img v-bind:src="src" /> </div>
        <div class="user" >{{show}}</div>
     <div  v-if="!src"  class="jump" v-on:click="choosepic" >上传图片</div>
	<div class="jump" v-on:click="gotoload"  v-if="!show" >登陆/注册</div>
	<div class="jump"  v-on:click="gotochange" >修改密码</div>
	<div class="jump" v-on:click="gotous" >关于我们</div> 
   </div>
	
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/vue.js" ></script>
<script type="text/javascript">
	apiready = function(){
	
	
	
	 //测试    
                
              	    
              	    
              	 //测试   
	
	
	
	
	
	
     try{ var user = $api.getStorage('user')
        if(user.name!="underfine")
        {
            wapper.show=user.name;
           //   alert(user.name);
        }
     }
     catch(error){
        
     };
       
       
       var wapper = new Vue({
         el:"#wapper",
         data:{
           show:'',
           welcome:'',
           src:''
         },
         methods:{
           gotous:function(){
              api.openWin({
	              name: 'aboutus',
	              url: '../framehtml/aboutus.html'
              });
           },
           gotoload:function(){
             api.openWin({
	             name: 'load',
	             url: '../framehtml/load.html'
             });
           },
           gotochange:function(){
             api.openWin({
	             name: 'sign',
	             url: '../framehtml/changepas.html'
             });
           },
          choosepic:function(){
               api.confirm({
               title:"提示",
               msg:"您想从哪里获取图片？",
               buttons:["拍照","相册",'取消']
               },function(ret,err){
               	//coding...
               	if(3==ret.buttonIndex)
               	  {
               	  return;
               	    };
              var sourceType ="album";
              if(1==ret.buttonIndex)
              {
                 sourceType="camera";
              }; 
              api.getPicture({
                sourceType:sourceType,
                encodingType:"jpg",
                mediaValue:"pic",
                saveToPhotoAlbum: true
              },function(ret,err){
              	//coding...
              	if(ret){
              	if(ret.data!=0)
              	{ 
              	 // alert(ret.data)
              	    wapper.src=ret.data;
              	  //  alert(wapper.src);
              	    alert(wapper.src);
                   api.ajax({
				    url: 'http://www.abccome.xyz/vue/up-pass.php',
				    method: 'post',
				    dataType:'text',
				    data: {
				        values: {
				            count: user.count
				        },
				        files: {
				            file: wapper.src
				        }
				    }
				}, function(ret, err) {
				    if (ret) {
				       alert(ret)
				    } else {
				        api.alert({ msg: JSON.stringify(err) });
				    }
				});              	
				              	  
              	
              	}
              	   alert(ret.data==0);
              	};
              }); 	 
               	    
               });
         
         }
           
           
         },
 
         
       });
       
       
       try{ var user = $api.getStorage('user')
        if(user.name!="underfine")
        {
            wapper.show="您好："+ user.name;
           //   alert(user.name);
        }
     }
     catch(error){
        
     };
       
       
	};
</script>
</html>