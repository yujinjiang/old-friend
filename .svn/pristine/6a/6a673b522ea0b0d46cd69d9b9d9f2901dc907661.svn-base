    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>title</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <style>
    	#wappers{
    	background:blue;
    	  height:50px;
    	  line-height:50px;
    	  text-align:center;
    	  font-size: 22px;
    	  color:white;
    	}
    	.jump{
            background:gray;
            height: 40px;
            border:solid 1px;
            margin-top:20px;
            text-align:center;
            border-radius:5px;
            font-size: 20px;
            line-height: 40px;
            color: white; 
            opacity: 0.3;       	
     	}
     	.user{
     	   text-align: center;
     	   margin-top:20px;
     	}
     	.showandhide{
     	   height: 40px;
     	   background: gray;
     	   color:white;
     	   border-radius: 5px;
     	    opacity: 0.3;
